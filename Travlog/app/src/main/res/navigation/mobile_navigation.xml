<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.travlog.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_HomeSecondFragment"
            app:destination="@id/nav_home_second" />
        <action
            android:id="@+id/action_nav_home_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/fragment_fade_enter" />
        <action
            android:id="@+id/action_nav_home_to_nav_logout"
            app:destination="@id/nav_logout"
            app:popUpTo="@id/nav_logout" />
    </fragment>
    <fragment
        android:id="@+id/nav_home_second"
        android:name="com.example.travlog.ui.home.HomeFragment"
        android:label="@string/home_second"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_HomeSecondFragment_to_HomeFragment"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_nav_home_second_to_nav_logout"
            app:destination="@id/nav_logout"
            app:popUpTo="@id/nav_logout" />
        <argument
            android:name="myArg"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.travlog.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/action_nav_gallery_self"
            app:destination="@id/nav_gallery" />
        <action
            android:id="@+id/action_nav_gallery_to_nav_logout"
            app:destination="@id/nav_logout"
            app:popUpTo="@id/nav_logout" />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.travlog.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.travlog.ui.activity.DetailsFragment"
        android:label="DetailsFragment" />
    <fragment
        android:id="@+id/nav_logout"
        android:name="com.example.travlog.LogoutFragment"
        android:label="LogoutFragment" >
        <action
            android:id="@+id/action_logoutFragment_self"
            app:destination="@id/nav_logout"
            app:popUpTo="@id/nav_logout" />
    </fragment>
</navigation>